# Environment configuration for Greentic OAuth services
BROKER_PORT=8080
BROKER_HOST=127.0.0.1

# NATS connectivity
NATS_URL=nats://127.0.0.1:4222
# Uncomment to require TLS with a specific domain
# NATS_TLS_DOMAIN=localhost

# Secrets manager configuration
SECRETS_DIR=./secrets

# Microsoft Graph OAuth provider
MSGRAPH_CLIENT_ID=
MSGRAPH_CLIENT_SECRET=
MSGRAPH_TENANT_MODE=multi
MSGRAPH_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Generic OIDC provider
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_AUTH_URL=
OIDC_TOKEN_URL=
OIDC_REDIRECT_URI=http://localhost:3000/auth/oidc/callback
OIDC_DEFAULT_SCOPES=openid profile

# Microsoft (optional)
MS_TENANT_ID=
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_REFRESH_TOKEN_SEEDED=

# Generic OIDC (Keycloak/Auth0)
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REFRESH_TOKEN_SEEDED=
OIDC_AUDIENCE=

# Telemetry
TELEMETRY_EXPORT=otlp-grpc   # or json-stdout
OTLP_ENDPOINT=http://otel-collector:4317
OTLP_HEADERS=
TELEMETRY_SAMPLING=parent
CLOUD_PRESET=none
ENV=dev
TENANT=acme
TEAM=platform
